<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fav Add Payee</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="main.scss">
</head>
<body>
    <div class="flex flex-col min-h-screen overflow-hidden">
    
        <%- include('partials/header'); %>
        <main class="flex-grow">
    
            <section class="bg-gradient-to-b from-gray-100 to-white">
                <div class="max-w-6xl mx-auto px-4 sm:px-6">
                    <div class="pt-32 pb-12 md:pt-40 md:pb-20">
    
                        <div class="max-w-3xl mx-auto text-center pb-12 md:pb-20">
                            <h1 class="h1">Add Fav Payee</h1>
                        </div>
    
                        <div class="max-w-sm mx-auto">
                            <form action="/home/fundtransfer/favourite/addfav/add" method="post">
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="account_from_account_number">Select Account Number</label>
                                        <select name="account_from_account_number" id="account_from_account_number">
                                            <% articles.forEach(function(article){ %>
                                                <option value="<%= article.account_number %>">
                                                    <%= article.account_number %>
                                                </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="account_to_account_number">Select Fav Payee</label>
                                        <select name="account_to_account_number" id="account_to_account_number">
                                            <% art.forEach(function(ar){ %>
                                                <option value="<%= ar.payee_account_number %>">
                                                    <%= ar.payee_account_number %>
                                                </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="transaction_amount">Transaction Amount:</label>
                                        <input type="text" name="transaction_amount" id="transaction_amount" class="form-input w-full text-gray-800">
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mt-6">
                                    <div class="w-full px-3">
                                        <button class="btn text-white bg-blue-600 hover:bg-blue-700 w-full" type="submit" value="addpayee">Add Fav Payee</button>
                                    </div>
                                </div>
                            </form>
                            
                        </div>
    
                    </div>
                </div>
            </section>
    
        </main>
    
    </div>
    
</body>
</html>