<body>
    <div class="flex flex-col min-h-screen overflow-hidden">
    
        <header class={`fixed w-full z-30 md:bg-opacity-90 transition duration-300 ease-in-out ${!top && `bg-white
            backdrop-blur-sm shadow-lg` }`}>
            <div class="max-w-6xl mx-auto px-5 sm:px-6">
                <div class="flex items-center justify-between h-16 md:h-20">
                    <div class="flex-shrink-0 mr-4">
                        <a href="/" class="block" aria-label="Uno Bank">
                            <img src="logo-short.svg" class="flex items-center justify-between h-16 md:h-20"></img>
                        </a>
                    </div>
    
                    <nav class="flex flex-grow">
                        <ul class="flex flex-grow justify-end flex-wrap items-center">
                            <li>
                                <a href="http://localhost:3000/home/getdata"
                                    class="font-medium text-gray-600 hover:text-gray-900 px-5 py-3 flex items-center transition duration-150 ease-in-out">
                                    Home</a>
                            </li>
                            <li>
                                <a href="http://localhost:3000/home/fundtransfer/getdata"
                                    class="font-medium text-gray-600 hover:text-gray-900 px-5 py-3 flex items-center transition duration-150 ease-in-out">
                                    Fund Transfer</a>
                            </li>
                            <li>
                                <a href="http://localhost:3000/home/managepayee"
                                    class="font-medium text-gray-600 hover:text-gray-900 px-5 py-3 flex items-center transition duration-150 ease-in-out">
                                    Payee Management</a>
                            </li>
                            <li>
                                <a href="http://localhost:3000/home/estatement/getdata"
                                    class="font-medium text-gray-600 hover:text-gray-900 px-5 py-3 flex items-center transition duration-150 ease-in-out">
                                    e-Statement</a>
                            </li>
                            <li>
                                <a href="http://localhost:3000/home/help"
                                    class="font-medium text-gray-600 hover:text-gray-900 px-5 py-3 flex items-center transition duration-150 ease-in-out">
                                    Help</a>
                            </li>
                            <li>
                                <a href="http://localhost:3000/logout"
                                    class="font-medium text-gray-600 hover:text-gray-900 px-5 py-3 flex items-center transition duration-150 ease-in-out">
                                    <span>Logout</span>
                                    <svg class="w-3 h-3 fill-current text-gray-400 flex-shrink-0 ml-2 -mr-1" viewBox="0 0 12 12"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path d="M11.707 5.293L7 .586 5.586 2l3 3H0v2h8.586l-3 3L7 11.414l4.707-4.707a1 1 0 000-1.414z"
                                            fillRule="nonzero" />
                                    </svg>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <main class="flex-grow">
    
            <section class="bg-gradient-to-b from-gray-100 to-white">
                <div class="max-w-6xl mx-auto px-4 sm:px-6">
                    <div class="pt-32 pb-12 md:pt-40 md:pb-20">
    
                        <div class="max-w-3xl mx-auto text-center pb-12 md:pb-20">
                            <h1 class="h1">Fund Transfer</h1>
                        </div>
    
                        <div class="max-w-sm mx-auto">
                            <form action="/home/fundtransfer/send" method="post">
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1"
                                            for="acc">Select Account</label>
                                            <select name="acc" id="acc">
                                                <% ar.forEach(function(art){ %>
                                                    <option value="<%= art.accno %><%= art.balance %>">
                                                        <%= art.accno %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="payee">Select Payee</label>
                                        <select name="payee" id="payee">
                                            <% articles.forEach(function(article){ %>
                                                <option value="<%= article.accno %><%= article.ifsc %>">
                                                    <%= article.title %> - <%= article.accno %>
                                                </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="bal">Account Balance</label>
                                        <input id="bal" type="number" name="bal" value="" disabled class="form-input w-full text-gray-800"
                                            placeholder="Acc Balance" required />
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="amt">Enter Amount</label>
                                        <input id="amt" type="number" name="amt" class="form-input w-full text-gray-800" placeholder="Enter Amount"
                                            required />
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="rem">Remarks</label>
                                        <input id="rem" type="text" name="rem" class="form-input w-full text-gray-800" placeholder="Enter Remarks"
                                            required />
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1" for="key">Online Key</label>
                                        <input id="key" type="text" name="key" class="form-input w-full text-gray-800" placeholder="Enter Remarks"
                                            required />
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mt-6">
                                    <div class="w-full px-3">
                                        <button class="btn text-white bg-blue-600 hover:bg-blue-700 w-full" type="submit" value="Transfer">Transfer Amount</button>
                                    </div>
                                </div>
                            </form>
