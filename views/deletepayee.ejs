<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Payee</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="main.scss">
</head>
<body>
    <div class="flex flex-col min-h-screen overflow-hidden">
    
        <%- include('partials/header'); %>
        <main class="flex-grow">
    
            <section class="bg-gradient-to-b from-gray-100 to-white">
                <div class="max-w-6xl mx-auto px-4 sm:px-6">
                    <div class="pt-32 pb-12 md:pt-40 md:pb-20">
    
                        <div class="max-w-3xl mx-auto text-center pb-12 md:pb-20">
                            <h1 class="h1">Delete Payee</h1>
                        </div>
    
                        <div class="max-w-sm mx-auto">
                            <form action="/home/managepayee/deletepayee/send" method="post">
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <label class="block text-gray-800 text-sm font-medium mb-1"
                                            for="acc">Select Payee</label>
                                            <select name="acc" id="acc">
                                                <% articles.forEach(function(article){ %>
                                                    <option value="<%= article.accno %>"><%= article.accno %></option>
                                                <% }) %>
                                            </select>
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-4">
                                    <div class="w-full px-3">
                                        <button class="btn text-white bg-blue-600 hover:bg-blue-700 w-full" type="submit" value="deletepayee">Delete Payee</button>
                                    </div>
                                </div>
                            </form>
                            
                        </div>
    
                    </div>
                </div>
            </section>
    
        </main>
    
    </div>
    <script>
        document.getElementById('acc').addEventListener('change', function() {
            console.log('You selected: ', this.value);
        });
        function func() {
            document.getElementById('update').style.visibility = 'visible'
        }
    </script>
</body>
</html>